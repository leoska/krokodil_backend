{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "mocha": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:n/recommended",
        "plugin:jsdoc/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [0, {  "js": "always"  }],
        "max-len": ["error", { "code": 100, "tabWidth": 2, "ignoreComments": true, "ignoreTrailingComments": true }],
        "no-restricted-syntax": [1, "ForInStatement"]
    },
    "ignorePatterns": [
        ".prettierrc",
        "node_modules/",
        "dist/"
    ],
    "plugins": [
        "jsdoc",
        "promise"
    ]
}
