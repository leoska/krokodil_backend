{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "ES2022",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "cmd/*": ["./src/cmd/*"],
            "core/*": ["./src/core/*"],
            "utils/*" : ["./src/utils/*"]
        }
    },
    "exclude": [
        "node_modules",
        "logs",
        "public"
    ]
}